<%- include("../partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">Add a New Comment to "<%=post.title%>"</div>
    <form action="/posts/<%=post._id%>/comments" method="post" class="ui form">
        <div class="field">
            <label for="comment[text]">What are you thinking?</label>
            <textarea id="comment[text]"
                      name="comment[text]"
                      placeholder="Share your thoughts" required></textarea>
        </div>
        <button class="ui big basic animated button" type="submit">
            <div class="visible content">Submit</div>
            <div class="hidden content">
                <i class="edit outline icon"></i>
            </div>
        </button>
    </form>
    <a href="/posts/<%=post._id%>">Return to <%=post.title%></a>
</div>

<%- include("../partials/footer") %>
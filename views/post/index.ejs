<%- include('../partials/header') %>

<div class="ui main text container">
    <div class="ui huge header">Welcome to my Blog!</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% posts.forEach(function (post) { %>
            <div class="item">
                <div class="content">
                    <a href="/posts/<%=post._id %>" class="header">
                        <%=post.title%>
                    </a>
                    <div class="meta">
                        <span><%=post.created.toLocaleDateString([], {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'})%></span>
                    </div>
                    <div class="description">
                        <p><%-post.body.substring(0, 100)%> ... </p>
                    </div>
                    <br>
                    <div class="extra">
                    <a href="/posts/<%=post._id %>">
                            <div class="ui big animated basic button" tabindex="0">
                                <div class="visible content">Read More</div>
                                <div class="hidden content">
                                    <i class="right arrow icon"></i>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
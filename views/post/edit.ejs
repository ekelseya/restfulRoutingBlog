<%- include("../partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit "<%=post.title%>"</div>
    <form action="/posts/<%= post._id %>?_method=PUT" method="post" class="ui form">
        <div class="field">
            <label for="title">Edit the title</label>
            <input type="text"
                   id="title"
                   name="title"
                   value="<%=post.title%>">
        </div>
        <div class="field">
            <label for="body">Edit the post</label>
            <textarea id="body"
                      name="body"
                      required><%=post.body%></textarea>
        </div>
        <button class="ui big basic button" type="submit">Submit</button>
    </form>
</div>

<%- include("../partials/footer") %>